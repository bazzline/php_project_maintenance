<?xml version="1.0"?>
<ruleset name="BazzlineStandard">
    <!-- @see https://github.com/squizlabs/PHP_CodeSniffer/wiki/Annotated-ruleset.xml -->
    <description>the bazzline coding standard for php projects.</description>

    <!-- exclude directories -->
    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>

    <!-- execute with following arguments -->
    <arg name="encoding" value="utf-8"/>
    <arg name="extension" value="php, phtml"/>
    <arg name="p" />

    <!-- include shipped rules -->
    <rule ref="PEAR"/>

    <!-- include external rules -->
    <!-- <rule ref="/path/to/the/rule" /> -->
</ruleset>
